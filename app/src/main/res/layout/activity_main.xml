<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/field_math"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:layout_marginEnd="15sp"
        android:ellipsize="start"
        android:gravity="end"
        android:textColor="@android:color/white"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:ellipsize="start"
        android:gravity="end"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:layout_marginEnd="15sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/AC"
                style="@style/ActionButton"
                android:text="AC" />

            <TextView
                android:id="@+id/Scob1"
                style="@style/ActionButton"
                android:text="(" />

            <TextView
                android:id="@+id/Scob2"
                style="@style/ActionButton"
                android:text=")" />

            <TextView
                android:id="@+id/divide"
                style="@style/ActionButton"
                android:text="/" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/num7"
                style="@style/NumberButton"
                android:text="7" />

            <TextView
                android:id="@+id/num8"
                style="@style/NumberButton"
                android:text="8" />

            <TextView
                android:id="@+id/num9"
                style="@style/NumberButton"
                android:text="9" />

            <TextView
                android:id="@+id/multiply"
                style="@style/ActionButton"
                android:text="*" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/num4"
                style="@style/NumberButton"
                android:text="4" />

            <TextView
                android:id="@+id/num5"
                style="@style/NumberButton"
                android:text="5" />

            <TextView
                android:id="@+id/num6"
                style="@style/NumberButton"
                android:text="6" />

            <TextView
                android:id="@+id/plus"
                style="@style/ActionButton"
                android:text="+" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/num1"
                style="@style/NumberButton"
                android:text="1" />

            <TextView
                android:id="@+id/num2"
                style="@style/NumberButton"
                android:text="2" />

            <TextView
                android:id="@+id/num3"
                style="@style/NumberButton"
                android:text="3" />

            <TextView
                android:id="@+id/minus"
                style="@style/ActionButton"
                android:text="-" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dot"
                style="@style/NumberButton"
                android:text="." />

            <TextView
                android:id="@+id/num0"
                style="@style/NumberButton"
                android:text="0" />

            <TextView
                android:id="@+id/clear"
                style="@style/NumberButton"
                android:text="C" />

            <TextView
                android:id="@+id/equal_btn"
                style="@style/ActionButton"
                android:text="=" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
